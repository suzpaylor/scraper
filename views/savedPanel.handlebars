
  {{#each Article}} 
  {{#if saveArticle}}

<ul>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>
            <a class="article-link titleInput" target="_blank" href="{{this.link}}">{{this.title}}</a>
            <a class="btn btn-danger delete " href="/delete/{{this._id}}">Delete From Saved</a>
            <a class="btn btn-info notes"  data-title="{{this.title}}" data-id="{{this._id}}" data-toggle="modal" data-target="#product_{{_id}}">Article Notes</a>
        </h3>
    </div>
    <div class="panel-body">{{this.teaser}}</div>
</div>
</ul>

    {{/if}}
    

<div class="modal fade product_view" id="product_{{this._id}}">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <a href="#" data-dismiss="modal" class="class pull-right">
          <span class="glyphicon glyphicon-remove"></span>
        </a>
        <h3 class="modal-title">{{this.title}}</h3>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-6 product_content">
            <ul class="myNotes">

         {{#each note}}

       <li> {{this.body}} <a class="btn btn-danger removeB" data-id="{{this._id}}">X</a></li><br>
  
         {{/each}}

            </ul>
            <h3> Add Notes </h3>
            <div class="row">
              <div class="col-md-4 col-sm-12">
                <textarea class="textArea" id="{{this._id}}" rows="4" cols="50"></textarea>
              </div>
            </div>
            <div class="space-ten"></div>
            <div class="btn-ground">
              <button type="button" class="btn btn-primary addNote" data-dismiss="modal" data-id="{{this._id}}">Confirm</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

 {{/each}}

 